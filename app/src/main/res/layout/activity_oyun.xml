<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Oyun"
        android:background="@drawable/pyramidbackground">

    <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/changeButton"
            android:background="@drawable/changebutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/harflerLayout" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/harflerLayout" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/kelimeyiUygulaBtn"/>
    <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/kelimeyiUygulaBtn"
            android:background="@drawable/kelimeyiuygula"
            app:layout_constraintStart_toEndOf="@+id/harflerLayout" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/harflerLayout"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.541"
            app:layout_constraintVertical_bias="0.149"/>

    <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/backButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:background="@drawable/backbutton"/>

    <Chronometer android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/timer"
                 android:textColor="#EBE7E7"
                 android:textSize="14sp" android:textStyle="bold"
                 android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                 app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/backButton"
                 android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.973"
                 android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/backButton"
    />

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="200dp" android:layout_height="200dp"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       android:layout_marginBottom="8dp"
                                                       android:id="@+id/harflerLayout"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:layout_marginEnd="8dp"
                                                       android:layout_marginTop="8dp"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintHorizontal_bias="0.565"
                                                       app:layout_constraintVertical_bias="0.982"
                                                         android:background="@drawable/circlelayout">

        <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/button1" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:background="@drawable/circlelayout"
                app:layout_constraintHorizontal_bias="0.503" android:textColor="@color/colorBlack"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>

        <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/button2" android:background="@drawable/circlelayout"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button1"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/button6"
                app:layout_constraintHorizontal_bias="0.075"/>
        <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/button3" android:background="@drawable/circlelayout"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="56dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/button4" app:layout_constraintHorizontal_bias="0.29"
                app:layout_constraintVertical_bias="1.0"/>
        <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/button4" android:background="@drawable/circlelayout"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="56dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="28dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button6"
                app:layout_constraintVertical_bias="1.0"/>
        <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/button5" android:background="@drawable/circlelayout"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button4" app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintVertical_bias="1.0"/>
        <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/button6" android:background="@drawable/circlelayout"
                android:textColor="@color/colorBlack"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button1"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secilenKelime"
            app:layout_constraintBottom_toTopOf="@+id/harflerLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="SeÃ§ilen Kelime" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.533"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.995"/>

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myTable"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.022"
            app:layout_constraintVertical_bias="0.077">
    </TableLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvlText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/timer"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/backButton"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/backButton"/>


</androidx.constraintlayout.widget.ConstraintLayout>